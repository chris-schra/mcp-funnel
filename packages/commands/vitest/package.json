{
  "name": "@mcp-funnel/command-vitest",
  "version": "0.0.1",
  "description": "Vitest test runner command for MCP Funnel - run tests and query results with AI-optimized output",
  "author": "Christoph Schramm",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chris-schra/mcp-funnel.git"
  },
  "keywords": [
    "mcp",
    "tools",
    "vitest",
    "test",
    "runner",
    "debugging"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "!dist/**/*.map"
  ],
  "scripts": {
    "build": "tsx build.ts",
    "build:watch": "tsx build.ts --watch",
    "test": "echo 'ERROR: Tests must be run via `yarn test` from repository root!' && exit 1",
    "release": "yarn npm audit && yarn pack -o out/out.tgz && npm publish --access public ./out/out.tgz"
  },
  "dependencies": {
    "@mcp-funnel/commands-core": "workspace:^",
    "@modelcontextprotocol/sdk": "^1.18.0",
    "lru-cache": "^11.0.2",
    "micromatch": "^4.0.8",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.9",
    "@types/node": "^24.3.1",
    "esbuild": "^0.25.9",
    "mcp-funnel": "workspace:^",
    "tsx": "^4.20.5"
  },
  "packageManager": "yarn@4.9.2"
}
