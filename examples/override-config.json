{
  "// This is an example configuration showing various toolOverrides strategies": "DO NOT COPY THESE COMMENTS TO YOUR CONFIG",
  "// toolOverrides allows you to modify tool metadata and input schemas": "Comments are not valid JSON",

  "servers": [
    {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "your-github-token"
      }
    },
    {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    }
  ],

  "toolOverrides": {
    "// Exact tool name match - override specific tools": "Examples below",

    "github__create_issue": {
      "title": "Create GitHub Issue (Enhanced)",
      "description": "Create a new GitHub issue with enhanced validation and auto-labeling",
      "inputSchema": {
        "strategy": "merge",
        "properties": {
          "priority": {
            "type": "string",
            "description": "Issue priority level",
            "enum": ["low", "medium", "high", "critical"],
            "default": "medium"
          },
          "auto_assign": {
            "type": "boolean",
            "description": "Automatically assign to repository maintainer",
            "default": false
          }
        },
        "required": ["owner", "repo", "title", "priority"]
      },
      "annotations": {
        "category": "issue-management",
        "tags": ["github", "enhanced"]
      }
    },

    "// Note: deep-merge performs true deep recursive merge using deepmerge-ts library": "Properly merges nested objects at all levels",
    "memory__store_memory": {
      "description": "Store information with enhanced categorization and search capabilities",
      "inputSchema": {
        "strategy": "deep-merge",
        "properties": {
          "importance": {
            "type": "string",
            "description": "Memory importance level for prioritized retrieval",
            "enum": ["low", "normal", "high", "critical"],
            "default": "normal"
          },
          "context": {
            "type": "string",
            "description": "Contextual information about when/why this memory was created"
          }
        },
        "propertyOverrides": {
          "content": {
            "description": "Memory content with enhanced validation - must be descriptive and searchable"
          },
          "metadata": {
            "description": "Enhanced metadata object with structured tagging system"
          }
        }
      }
    },

    "// Pattern-based matching - use wildcards to match multiple tools": "Examples below",

    "github__*": {
      "annotations": {
        "category": "github-operations",
        "tags": ["github", "version-control"]
      }
    },

    "memory__*": {
      "annotations": {
        "category": "knowledge-management",
        "tags": ["memory", "persistence"]
      }
    },

    "*__delete_*": {
      "title": "⚠️ ${originalTitle}",
      "description": "WARNING: This is a destructive operation. ${originalDescription}",
      "annotations": {
        "category": "destructive-operations",
        "tags": ["dangerous", "delete"],
        "deprecated": false,
        "deprecationMessage": "Use with extreme caution - this operation cannot be undone"
      }
    },

    "// Advanced schema override strategies": "Replace, merge, deep-merge (true recursive merge)",

    "github__update_pull_request": {
      "inputSchema": {
        "strategy": "replace",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Repository owner"
          },
          "repo": {
            "type": "string",
            "description": "Repository name"
          },
          "pullNumber": {
            "type": "number",
            "description": "Pull request number to update"
          },
          "updates": {
            "type": "object",
            "description": "Simplified update object",
            "properties": {
              "title": { "type": "string" },
              "body": { "type": "string" },
              "state": { "type": "string", "enum": ["open", "closed"] }
            }
          }
        },
        "required": ["owner", "repo", "pullNumber", "updates"]
      }
    },

    "// Deprecation examples": "Mark tools as deprecated",

    "github__get_legacy_api": {
      "annotations": {
        "deprecated": true,
        "deprecationMessage": "This tool uses deprecated GitHub API endpoints. Use github__get_api_v4 instead."
      }
    },

    "// Custom tool renaming": "Change tool names for clarity",

    "memory__retrieve_memory": {
      "name": "memory__search",
      "title": "Search Memories",
      "description": "Search through stored memories using semantic similarity"
    },

    "memory__check_embedding_mode": {
      "name": "memory__check",
      "description": "Check memory system status (renamed for simplicity)"
    }
  },

  "// Global override settings": "Control how overrides are applied",
  "overrideSettings": {
    "allowPreRegistration": false,
    "warnOnMissingTools": true,
    "applyToDynamic": true,
    "validateOverrides": true
  }
}
