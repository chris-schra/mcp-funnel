{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "Bundler",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "./src",
    "rootDir": "./",
    "types": ["node"],
    "jsx": "react-jsx"
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts", "./packages/**/*"],
  "exclude": ["**/node_modules/**/*", "**/dist/**/*"]
}
